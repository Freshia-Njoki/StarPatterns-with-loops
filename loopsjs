// example 3
// *
// **
// ***
// ****
// *****
// ******
console.log('Example 3');
let star = " ";
for (i = 1; i <= 6; i++) {
    star += "*";
    console.log(star);
}
// example 4
// ******
// *****
// ****
// ***
// **
// *
console.log('Example 4');
for (i = 1; i <=6; i++) {
    let star2 = ' ';
    for(j=6;j>=i;j--){
        star2+='*';
    }
    console.log(star2);
}
