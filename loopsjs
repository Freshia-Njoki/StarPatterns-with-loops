// example 5
//     *
//    **
//   ***
//  ****
// *****
//  ****
//   ***
//    **
//     *
console.log('Example 5');
let space = 5;
for(i=1;i<=5;i++){
    console.log(' '.repeat(space - i) + '*'.repeat(i)); 
}
for(i=1;i<=5;i++){
    console.log(' '.repeat(i) + '*'.repeat(space-i));
}

// example 6
//     *
//    ***
//   *****
//  *******
// *********
//  *******
//   *****
//    ***
//     *
console.log('Example 6');
let space2 = 5;
for(i=1;i<=5;i++){
    console.log(' '.repeat(space2 - i) + '*'.repeat(i) + '*'.repeat(i - 1))
}
for(i=1;i<=4;i++){
    console.log(' '.repeat(i) + '*'.repeat(space2 - i) + '*'.repeat(4 - i));
}

